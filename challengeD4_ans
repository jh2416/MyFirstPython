playing = True

while playing:
  a = int(input("Choose a number:\n"))
  b = int(input("Choose another one:\n"))
  operation = input("Choose an operation:\n    Options are: + , - , * or /.\n    Write 'exit' to finish.\n")
  
  if operation == "+":
    print("Result:", a + b)
  elif operation == "-":
    print("Result:", a - b)
  elif operation == "*":
    print("Result:", a * b)
  elif operation == "/":
    print("Result:", a / b)
  elif 'exit':
    playing = False


